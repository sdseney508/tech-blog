<div class="flex-row">
  <div class="card d-flex flex-column">
    <div class="card-header d-flex flex-row justify-content-between">
      <p id="blog-title" class="bold">{{blog_title}}</p>
      <p>Created by {{user.name}} on {{format_date date_created}}</p>

    </div>
    <p>{{blog_description}}</p>

  </div>
  <h4>Comments:</h4>
  <div class="flex-column">

    {{#each blogcomments as |blogcomment| }}
    <div class="card comment-card d-flex flex-row">
      <div class="blog-title">
        <p>
          {{blog_comment}}
          {{!-- double check how to reference a user_id as part of a query --}}
        </p>
        <p>
          Posted by {{blogcomment.user.name}}
        </p>
      </div>
      <div class="blog-body">
        <p>
          {{blog.blog_description}}
        </p>
      </div>

    </div>
    {{/each}}

  </div>

  <form class="form new-comment-form">
    <div class="form-group">
      <div class="b_id invisible" id="b_id">{{id}}</div>
      <label for="comment-desc">Create A New Comment:</label>
      <textarea class="form-input" id="comment-description" name="comment-description"></textarea>
    </div>
    <div class="form-group">
      <button class="btn btn-primary" id="comment-btn" data-id="{{id}}">Submit Comment</button>
    </div>
  </form>
</div>
<script src="/js/comment.js"></script>